# Server Configuration
PORT=4000
NODE_ENV=development
LOG_LEVEL=debug
FRONTEND_URL=http://localhost:3000

CMS_ORIGIN=http://localhost:3001

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# Security Configuration
CSRF_COOKIE_NAME=XSRF-TOKEN

# Cookie auth configuration
ACCESS_TOKEN_COOKIE_NAME=accessToken
REFRESH_TOKEN_COOKIE_NAME=refreshToken
SESSION_ID_COOKIE_NAME=sessionId

# Cookie security settings
# For same *site* across subdomains (e.g., app.example.com -> api.example.com):
# - Set COOKIE_DOMAIN=.example.com to share cookies
# - In production use HTTPS: COOKIE_SECURE=true
# - Prefer strict to reduce CSRF surface: COOKIE_SAME_SITE=strict
COOKIE_SAME_SITE=strict
COOKIE_SECURE=true
COOKIE_DOMAIN=.example.com

# Development override (typical localhost HTTP)
# COOKIE_SAME_SITE=lax
# COOKIE_SECURE=false
# COOKIE_DOMAIN=
JWT_ACCESS_SECRET=your_jwt_access_secret_key_here
JWT_REFRESH_SECRET=your_jwt_refresh_secret_key_here

# Required: separate secret for email verification tokens
JWT_EMAIL_VERIFY_SECRET=your_jwt_email_verify_secret_here

# Optional: secret used to HMAC-hash refresh tokens at rest (falls back to JWT_REFRESH_SECRET)
REFRESH_TOKEN_HASH_SECRET=your_refresh_token_hash_secret_here

# Optional: throttle session lastActivity DB writes
SESSION_ACTIVITY_THROTTLE_SECONDS=300

# Optional: cap active sessions per user
MAX_ACTIVE_SESSIONS_PER_USER=5

# Database Configuration
MONGODB_URI=mongodb://username:password@localhost:27017/database_name?authSource=admin

# Email Configuration (SMTP)
SMTP_HOST=your_smtp_host
SMTP_PORT=465
SMTP_USER=your_email@example.com
SMTP_PASS=your_email_password
SMTP_USERNAME=your_smtp_username